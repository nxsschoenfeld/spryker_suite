{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "target": "es2015",
        "module": "esnext",
        "typeRoots": ["node_modules/@types"],
        "lib": ["esnext", "dom"],
        "baseUrl": ".",
        "rootDir": ".",
        "paths": {
            "@mp/zed-ui/*": [
                "./vendor/spryker/zed-ui/src/Spryker/Zed/ZedUi/Presentation/Components/*"
            ]
        }
    },
    "include": [
        "vendor/spryker/zed-ui/src/Spryker/Zed/ZedUi/Presentation/Components/main.ts",
        "vendor/spryker/zed-ui/src/Spryker/Zed/ZedUi/Presentation/Components/polyfills.ts",
        "vendor/spryker/*/src/Spryker/Zed/*/Presentation/Components/index.ts"
    ],
    "exclude": [
        "**/node_modules/**",
        "**/*.spec.ts",
        "public",
        "dist",
        "**/dist/**"
    ]
}
