{
    "compilerOptions": {
        "baseUrl": ".",
        "sourceMap": true,
        "noImplicitAny": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "module": "esnext",
        "moduleResolution": "node",
        "removeComments": true,
        "target": "es2015",
        "lib": ["dom", "esnext"],
        "paths": {
            "@mp/zed-ui/*": [
                "./vendor/spryker/zed-ui/src/Spryker/Zed/ZedUi/Presentation/Components/*"
            ],
            "*": ["*"],
            "ShopUi/*": [
                "./vendor/spryker-shop/shop-ui/src/SprykerShop/Yves/ShopUi/Theme/default/*"
            ]
        }
    },
    "include": [
        "./vendor/spryker-shop/**/*",
        "./vendor/spryker-eco/**/*",
        "./src/Pyz/Yves/**/*"
    ],
    "exclude": [
        "**/node_modules/**",
        "**/*.spec.ts",
        "public",
        "dist",
        "**/dist/**"
    ]
}
